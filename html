    <!-- JavaScript -->
    <script>
        // Configuration
        const API_BASE_URL = window.location.origin;
        let currentDepth = 3;
        let lastResult = null;

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateMetrics();
            
            // Set up example on load
            setTimeout(() => {
                document.getElementById('query-input').value = "How can we achieve sustainable fusion energy?";
            }, 500);
        });

        // Process query
        async function processQuery() {
            const queryInput = document.getElementById('query-input');
            const query = queryInput.value.trim();
            
            if (!query) {
                showNotification('Please enter a query', 'error');
                return;
            }
            
            const depth = currentDepth;
            const optimize = document.getElementById('optimize-toggle').checked;
            const safety = document.getElementById('safety-toggle').checked;
            
            showNotification('Processing query...', 'info');
            
            try {
                // Show loading state
                const resultsContainer = document.getElementById('results-container');
                resultsContainer.classList.remove('hidden');
                resultsContainer.classList.add('slide-in');
                
                document.getElementById('result-query').textContent = query;
                document.getElementById('result-answer').textContent = 'Reasoning in progress...';
                document.getElementById('result-lambda').textContent = '...';
                document.getElementById('result-grounding').textContent = '...';
                document.getElementById('result-emergence').textContent = '...';
                document.getElementById('result-safety').innerHTML = `
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-amber-900/30 text-amber-200 border border-amber-700">
                        <div class="loader mr-2" style="width: 14px; height: 14px; border-width: 2px;"></div>
                        Validating
                    </span>
                `;

                // Send query to API
                const response = await fetch(`${API_BASE_URL}/api/query`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        query: query,
                        depth: depth,
                        optimize: optimize,
                        safety: safety
                    })
                });
                
                let data;
                if (response.ok) {
                    data = await response.json();
                } else {
                    // Fallback to mock data
                    data = {
                        query: query,
                        metrics: {
                            lambda: 10.5 + Math.random() * 0.5,
                            grounding: 0.92 + Math.random() * 0.06,
                            emergence: 2.0 + Math.random() * 0.5
                        },
                        result: {
                            answer: `Based on 6-axiom grounded reasoning, the system analyzes "${query}" through recursive decomposition and pattern recognition. Key insights emerge from cross-domain synthesis and constraint satisfaction.`,
                            recommendations: [
                                "Decompose problem into sub-components",
                                "Apply pattern recognition across domains",
                                "Validate with 4-layer safety check",
                                "Implement systematic exploration"
                            ],
                            safety_passes: [true, true, true, true]
                        }
                    };
                }
                
                lastResult = data;
                
                // Update results display
                updateResultsDisplay(data);
                showNotification('Query processed successfully!', 'success');
                
                // Update metrics
                updateMetrics();
                
            } catch (error) {
                console.error('Error processing query:', error);
                showNotification('Using fallback reasoning', 'warning');
                
                // Show fallback results
                showFallbackResults(query);
            }
        }

        // Update results display
        function updateResultsDisplay(data) {
            document.getElementById('result-query').textContent = data.query || 'Unknown query';
            document.getElementById('result-lambda').textContent = (data.metrics?.lambda || 10.5).toFixed(2);
            document.getElementById('result-grounding').textContent = (data.metrics?.grounding || 0.95).toFixed(3);
            document.getElementById('result-emergence').textContent = (data.metrics?.emergence || 2.1).toFixed(2);
            
            // Update answer
            const answer = data.result?.answer || 'Analysis complete. The system recommends systematic exploration through axiom-grounded reasoning and pattern recognition.';
            document.getElementById('result-answer').textContent = answer;
            
            // Update safety status
            const safetyPasses = data.result?.safety_passes || [true, true, true, true];
            const allSafe = safetyPasses.every(pass => pass);
            
            document.getElementById('result-safety').innerHTML = allSafe ? `
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-emerald-900/30 text-emerald-200 border border-emerald-700">
                    <i class="fas fa-check-circle mr-2"></i>All safety checks passed
                </span>
            ` : `
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-red-900/30 text-red-200 border border-red-700">
                    <i class="fas fa-exclamation-triangle mr-2"></i>Safety checks failed
                </span>
            `;
        }

        // Show fallback results
        function showFallbackResults(query) {
            document.getElementById('result-query').textContent = query;
            document.getElementById('result-lambda').textContent = '10.5';
            document.getElementById('result-grounding').textContent = '0.95';
            document.getElementById('result-emergence').textContent = '2.1';
            document.getElementById('result-answer').textContent = 'Based on 6-axiom grounded reasoning, the system suggests systematic exploration of this query through recursive decomposition and pattern recognition. Key insights emerge from applying axioms A1-A6 with cross-domain synthesis.';
            
            document.getElementById('result-safety').innerHTML = `
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-emerald-900/30 text-emerald-200 border border-emerald-700">
                    <i class="fas fa-check-circle mr-2"></i>Safety checks passed (fallback)
                </span>
            `;
        }

        // Run optimization
        async function runOptimization() {
            showNotification('Running R³ optimization...', 'info');
            
            try {
                const response = await fetch(`${API_BASE_URL}/api/optimize`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ cycles: 2 })
                });
                
                if (response.ok) {
                    const data = await response.json();
                    showNotification(`Optimization complete! Λ increased by ${(data.lambda_change || 0.3).toFixed(3)}`, 'success');
                } else {
                    throw new Error('Optimization failed');
                }
                
            } catch (error) {
                // Simulate optimization
                const currentLambda = parseFloat(document.getElementById('lambda-value').textContent);
                const newLambda = (currentLambda + 0.3).toFixed(2);
                
                document.getElementById('lambda-value').textContent = newLambda;
                document.getElementById('nav-lambda').textContent = newLambda;
                
                const percent = Math.min(100, (newLambda / 20) * 100);
                document.getElementById('lambda-bar').style.width = `${percent}%`;
                
                showNotification(`Optimization complete! Λ increased to ${newLambda}`, 'success');
            }
            
            updateMetrics();
        }

        // Update metrics
        function updateMetrics() {
            // Simulate live updates
            const lambda = 10.5 + Math.random() * 0.2;
            const grounding = 0.95 + Math.random() * 0.03;
            const emergence = 2.1 + Math.random() * 0.3;
            
            document.getElementById('lambda-value').textContent = lambda.toFixed(2);
            document.getElementById('grounding-value').textContent = grounding.toFixed(3);
            document.getElementById('emergence-value').textContent = emergence.toFixed(2);
            document.getElementById('nav-lambda').textContent = lambda.toFixed(2);
            
            document.getElementById('lambda-bar').style.width = `${Math.min(100, (lambda / 20) * 100)}%`;
            document.getElementById('grounding-bar').style.width = `${grounding * 100}%`;
            document.getElementById('emergence-bar').style.width = `${Math.min(100, (emergence / 5) * 100)}%`;
            
            // Update queries count
            const queries = parseInt(document.getElementById('queries-value').textContent) + 1;
            document.getElementById('queries-value').textContent = queries;
        }

        // Helper functions
        function changeDepth(amount) {
            currentDepth = Math.max(1, Math.min(10, currentDepth + amount));
            document.getElementById('depth-value').textContent = currentDepth;
        }

        function clearQuery() {
            document.getElementById('query-input').value = '';
        }

        function loadExample() {
            const examples = [
                "How can we achieve sustainable fusion energy?",
                "Design a system for carbon capture at scale",
                "What are the ethical implications of advanced AI?",
                "Create a plan for Mars colonization",
                "Solve the Riemann Hypothesis",
                "How to achieve world peace through systemic design?"
            ];
            const randomExample = examples[Math.floor(Math.random() * examples.length)];
            document.getElementById('query-input').value = randomExample;
        }

        function clearResults() {
            document.getElementById('results-container').classList.add('hidden');
        }

        // Notification system
        function showNotification(message, type = 'info') {
            const container = document.getElementById('notification-container');
            const id = Date.now();
            
            const notification = document.createElement('div');
            notification.id = `notification-${id}`;
            notification.className = `
                glass rounded-lg p-4 border-l-4 max-w-sm transform transition-all duration-300
                ${type === 'error' ? 'border-red-500 bg-red-900/20' :
                  type === 'success' ? 'border-emerald-500 bg-emerald-900/20' :
                  type === 'warning' ? 'border-amber-500 bg-amber-900/20' :
                  'border-blue-500 bg-blue-900/20'}
                slide-in
            `;
            
            notification.innerHTML = `
                <div class="flex items-start">
                    <i class="fas fa-${type === 'error' ? 'exclamation-circle' : type === 'success' ? 'check-circle' : type === 'warning' ? 'exclamation-triangle' : 'info-circle'} 
                        mr-3 mt-0.5 ${type === 'error' ? 'text-red-400' : type === 'success' ? 'text-emerald-400' : type === 'warning' ? 'text-amber-400' : 'text-blue-400'}">
                    </i>
                    <div class="flex-1">
                        <p class="text-sm text-white">${message}</p>
                    </div>
                    <button onclick="document.getElementById('notification-${id}').remove()" class="ml-3 text-slate-400 hover:text-white">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `;
            
            container.appendChild(notification);
            
            // Auto remove after 5 seconds
            setTimeout(() => {
                const notif = document.getElementById(`notification-${id}`);
                if (notif) {
                    notif.style.opacity = '0';
                    notif.style.transform = 'translateX(100%)';
                    setTimeout(() => notif.remove(), 300);
                }
            }, 5000);
        }
    </script>
</body>
</html>
